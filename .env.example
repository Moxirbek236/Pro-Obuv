
# Universal Restaurant System Configuration
# Copy this file to .env and configure your values

# Environment
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///restaurant.db

# External APIs
YANDEX_GEOCODER_API=your-yandex-api-key
GOOGLE_MAPS_API=your-google-api-key
SERPER_API_KEY=your-serper-api-key

# Business Settings
AVG_PREP_MINUTES=7
DELIVERY_BASE_PRICE=10000
COURIER_BASE_RATE=8000
CASHBACK_PERCENTAGE=1.0
MAX_DELIVERY_DISTANCE=50.0

# Localization
DEFAULT_LANGUAGE=uz
DEFAULT_CURRENCY=UZS
TIMEZONE=Asia/Tashkent

# Rate Limiting
RATE_LIMIT_DAILY=1000
RATE_LIMIT_HOURLY=200
RATE_LIMIT_MINUTE=50

# Performance
THREAD_POOL_MAX_WORKERS=10
DB_POOL_MAX_CONNECTIONS=20

# Logging
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Admin Access
SUPER_ADMIN_USERNAME=masteradmin
SUPER_ADMIN_PASSWORD=SuperAdmin2025!@#$%

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Server
PORT=5000
HOST=0.0.0.0
