modules = ["python-3.12"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
author = 45556560
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*app.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
